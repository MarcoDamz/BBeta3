# Django Settings
SECRET_KEY=change-this-in-production-to-a-secure-random-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Database
POSTGRES_DB=chatagentb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# LLM API Keys (OBLIGATOIRE - Remplacer par vos vraies clés)
OPENAI_API_KEY=your-openai-api-key-here

# LLM API Configuration
# URL de base pour l'API OpenAI (optionnel, laissez vide pour utiliser l'API officielle)
# Exemples : https://api.openai.com/v1 (par défaut) ou votre propre endpoint
OPENAI_API_BASE=

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Django Superuser (créé automatiquement au démarrage)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@chatagentb.local
DJANGO_SUPERUSER_PASSWORD=admin123
